.remote
  = simple_form_for(@facility_case, html: one_submit_only, remote: true) do |f|
    = link_to_close edit_facility_case_path(@facility_case)
    = f.hidden_field :user_id
    = f.error_messages object_name: t('facility_case')

    = render "fat_free_crm/facility_cases/top_section",  f: f, edit: true
    = f.fields_for :contact_elicitation_investigation do |investigation|
      = render "fat_free_crm/facility_cases/contact_exposures", f: investigation
    = render "fat_free_crm/entities/permissions",  f: f, edit: true, entity: @facility_case
    = hook(:entity_form, self, {f: f, entity: @facility_case})
    .buttonbar
      - if Setting.compound_address
        = f.submit t(:save_facility_case), { onclick: "crm.clear_all_hints()", class: 'btn btn-primary'}
      - else
        = f.submit t(:save_facility_case), { class: 'btn btn-primary' }
      = link_to_cancel edit_facility_case_path(@facility_case)

  = javascript_include_tag("awesomplete")
  = stylesheet_link_tag("awesomplete")